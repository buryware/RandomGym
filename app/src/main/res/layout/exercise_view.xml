<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:id="@+id/GymView"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.starfireanimation.randomgym.MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="0dp"
        android:paddingBottom="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:weightSum="1"
        android:gravity="top">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/imageTitle"
            android:background="@drawable/title_v1_050616" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/exerciseView" />

            <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="42dp"
                android:paddingRight="80dp"
                android:paddingTop="16dp"
                android:layout_width="416dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:weightSum="1">

                <ImageButton
                    android:layout_width="83dp"
                    android:layout_height="90dp"
                    android:id="@+id/imageTimerButton"
                    android:background="@drawable/mainscreen_timer_btn_v1_050916"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:orientation="vertical"
                    android:paddingLeft="60dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="false"
                    android:layout_weight="0.40">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="16dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:id="@+id/nextworkouttext"
                        android:background="@drawable/mainscreen_nextworkout_text_smaller_v1_050916" />

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:thumb="@drawable/mainscreen_slider_btn_smaller_v1_051916"
                        android:track="@drawable/mainscreen_slider_background_btn_smaller_v1_050916"
                        android:id="@+id/nextworkoutswitch"
                        android:checked="false" />

                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
</RelativeLayout>