<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.starfireanimation.randomgym.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:weightSum="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/imageView2"
            android:layout_weight="0.31" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/imageTitle"
            android:background="@drawable/title_v1_050616"
            android:layout_gravity="bottom" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingBottom="16dp"
            android:paddingLeft="56dp"
            android:paddingRight="56dp"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:weightSum="1"
            android:layout_weight="0.08">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="120dp"
                android:id="@+id/imageHomeButton"
                android:background="@drawable/location_home_btn_v1_050616"
                android:layout_weight="0.35" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:id="@+id/imageView"
                android:layout_weight="0.31" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="120dp"
                android:id="@+id/imageGymButton"
                android:background="@drawable/location_gym_btn_v1_050616"
                android:layout_weight="0.33" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
